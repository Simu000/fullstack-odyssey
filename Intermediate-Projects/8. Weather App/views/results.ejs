<%- include("partials/header", { title: "Weather Result" }) %>

<div class="search-container top center">
  <form id="myForm" action="/city" method="post">
    <input type="text" id="cityInput" name="City" placeholder="Search another city..." required>
    <button type="submit">Search</button>
  </form>
</div>

<div class="weather-wrapper">
  <% if (!locals.error) { %>
    <div class="weather-card">
      <h1>Weather in <%= City %>, <%= Country %></h1>
      
      <div class="weather-details">
        <p><strong>Temperature:</strong> <%= Temperature %>°C</p>
        <p><strong>Feels Like:</strong> <%= Feel %>°C</p>
        <p><strong>Description:</strong> <%= desc %></p>
        <p><strong>Humidity:</strong> <%= humidity %>%</p>
        <p><strong>Wind Speed:</strong> <%= windSpeed %> m/s</p>
        <p><strong>Cloudiness:</strong> <%= cloudiness %>%</p>
        <p><strong>Sunrise:</strong> <%= Sunrise %></p>
        <p><strong>Sunset:</strong> <%= Sunset %></p>
      </div>

      <div class="weather-icon">
        <img src="http://openweathermap.org/img/wn/<%= icon %>@2x.png" alt="weather icon">
      </div>
    </div>
  <% } else { %>
    <div class="weather-card">
      <h1>Error</h1>
      <p><%= error %></p>
    </div>
  <% } %>
</div>

<%- include("partials/footer") %>
